@{
    ViewBag.Title = "Game";
}
<div class="form-group" id="divForm">
    <div id="divLevelRange">
        <label for="rangeLevel" id="lblRangeLevel" class="text-success">Dificultad: Normal</label>
        <input type="range" class="slider" id="rangeLevel" name="rangeLevel"><br>
        <h4 id="headerAttempts">Intentos Max.: 20</h4>
    </div>
    <input type="text" id="inputNum" name="inputNum" class="form-control w-25 p-3" maxlength="4" placeholder="Max. 4 digitos" onkeypress="return isNumber(event)" onpaste="return false;">
    <br>
    <button id="btnTest" type="button" class="btn btn-dark">Validar</button>
    <button id="btnResolve" type="button" class="btn btn-danger">Me Rindo!</button>
    <button id="btnRestart" type="button" class="btn btn-primary" hidden="">Reiniciar</button>
</div>
<div class="container">
    <div class="row">
        <div id="divHistory" class="col-md" hidden="">
            <ul class="list-group" id="listHistorical" />
        </div>
        <div id="divStats" class="col-md" hidden="">
            <h3 id="numAttempts">Intentos: -/-</h3><br>
            <h3 id="actualTry">Actual: -</h3><br>
            <h3 id="amountA">A: -</h3><br>
            <h3 id="amountB">B: -</h3><br>
            <h1 id="headerResult" hidden=""></h1>
        </div>
        <div class="col-sm" />
    </div>
</div>